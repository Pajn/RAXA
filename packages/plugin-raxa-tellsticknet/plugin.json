{
  "name": "RaxaTellstickNet",
  "description": "Plugin for TellstickNet with modified firmware for direct communication",
  "deviceClasses": [
    {
      "name": "RaxaTellstickNet",
      "implementsInterfaces": ["433MHzPulse"]
    }
  ],
  "interfaces": [
    {
      "name": "433MHzPulse",
      "methods": {
        "send": {
          "arguments": {
            "pulse": {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 255
              }
            },
            "repeats": {
              "type": "integer",
              "minimum": 1
            },
            "pause": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    }
  ]
}
