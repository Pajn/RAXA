{
  "name": "MySensors",
  "description": "Plugin for MySensors serial gateway",
  "deviceClasses": {
    "Serial MySensors Gateway": {
      "id": "Serial MySensors Gateway",
      "name": "Serial MySensors Gateway",
      "types": [],
      "config": {
        "serialPort": {
          "id": "serialPort",
          "type": "string",
          "modifiable": true
        }
      },
      "interfaceIds": ["MySensors Gateway"]
    },
    "MySensors Sensor": {
      "id": "MySensors Sensor",
      "name": "MySensors Sensor",
      "types": [],
      "config": {
        "gateway": {
          "id": "gateway",
          "type": "device",
          "modifiable": true,
          "interfaceIds": ["MySensors Gateway"]
        },
        "node": {
          "id": "node",
          "type": "integer"
        },
        "sensor": {
          "id": "sensor",
          "type": "integer"
        }
      },
      "interfaceIds": []
    }
  },
  "interfaces": {
    "MySensors Gateway": {
      "id": "MySensors Gateway",
      "methods": {
        "send": {
          "arguments": {
            "node": {
              "type": "integer",
              "minimum": 0,
              "maximum": 255
            },
            "sensor": {
              "type": "integer",
              "minimum": 0,
              "maximum": 255
            },
            "type": {
              "type": "integer",
              "minimum": 0,
              "maximum": 4
            },
            "subType": {
              "type": "integer",
              "minimum": 0,
              "maximum": 255
            },
            "payload": {
            }
          }
        }
      }
    }
  }
}
