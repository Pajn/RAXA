{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "target": "es2015",
    "module": "es2015",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "outDir": "build",
    "types": ["webpack-env", "jest"]
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules/**/*"]
}
